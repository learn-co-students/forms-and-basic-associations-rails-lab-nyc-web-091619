<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <h3>Artist</h3>
  <%= f.label :artist_name%>
  <%= f.text_field :artist_name %>
  <br>

  <h3>Genre</h3>
  <%= f.collection_select :genre_id, @genres, :id, :name, prompt: true %>
  <br>

  <h3>Song Notes</h3>
  Song Note 1 <input name='song[note_contents][]' id='song_notes_1'><br>
  Song Note 2 <input name='song[note_contents][]' id='song_notes_2'><br>
  Song Note 3 <input name='song[note_contents][]' id='song_notes_3'><br>
  <br>
  <%= f.submit %>
<% end %>


